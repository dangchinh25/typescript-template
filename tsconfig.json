{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "ES2018",
    "types": ["node", "jest"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./app/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
